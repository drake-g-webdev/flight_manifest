# Database
DATABASE_URL="postgresql://user:password@localhost:5432/flight_manifest_db?schema=public"

# Redis (for BullMQ job queue)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key"
CLAUDE_MODEL="claude-sonnet-4-20250514"

# Server
PORT=3001
NODE_ENV="development"

# PDF Generation
PDF_STORAGE_PATH="./storage/manifests"

# Standard weights (regulatory defaults)
STANDARD_ADULT_WEIGHT_KG=88
STANDARD_CHILD_WEIGHT_KG=35
STANDARD_BAGGAGE_WEIGHT_KG=10
